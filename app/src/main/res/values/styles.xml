<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.ConnectionErrorText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="EmptyText" parent="TextAppearance.AppCompat.ConnectionErrorText">
    </style>

    <style name="PartialErrorLoadingText" parent="TextAppearance.AppCompat.ConnectionErrorText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
